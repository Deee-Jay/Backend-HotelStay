<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-6xl">
      <h2 class="text-3xl text-red-500 font-bold text-center mb-6">
        Welcome to Home List
      </h2>
      <div class="flex flex-wrap justify-center gap-6">
        <% registeredHomes.forEach(home => { %>
          <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition duration-300 w-full max-w-sm">
            <img src="<%= home.housePhotos %>" class="w-full h-48 object-cover">
            <div class="p-4">
              <h3 class="text-xl font-semibold text-gray-800 mb-2"><%= home.houseName %></h3>
              <p class="text-gray-600 mb-2"><i class="fas fa-map-marker-alt mr-2"></i><%= home.houseLocation %></p>
              <div class="flex justify-between items-center mb-2">
                <span class="text-lg font-bold text-red-500">Rs<%= home.housePrice %> / night</span>
                <div class="flex items-center">
                  <span class="text-gray-700"><%= home.houseRating %>ðŸŒŸ</span>
                </div>
              </div>
              <a href="/home/<%= home.homeID %>" class="bg-purple-200 p-2">Details</a>
              <%- include('../partials/favourites' , {home: home}) %>
            </div>
          </div>
        <% }) %>
      </div>
    </main>
  </body>
</html>