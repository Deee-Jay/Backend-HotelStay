<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto mt-8 p-8 bg-white rounded-lg shadow-md">
      <h1 class="text-3xl font-bold mb-6 text-center text-gray-800"><%= toEdit ? "Edit Your Home on AirBnB" : "Register Your Home on AirBnB" %></h1>
      <form action="/host/<%= toEdit ? 'edit-home' : 'add-home' %>" method="POST" class="max-w-md mx-auto">
        <input type="hidden" name="id" value="<%= toEdit ? home._id : '' %>">
        <input
          type="text"
          name="houseName"
          placeholder="Enter your House Name"
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
          value="<%= toEdit ? home.houseName : '' %>"
        />
        <input
        type="text"
        name="houseLocation"
        placeholder="Enter your House Location"
        class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
        value="<%= toEdit ? home.houseLocation : '' %>"
      />
      <input
      type="text"
      name="housePrice"
      placeholder="Enter your House Price per Night"
      class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
      value="<%= toEdit ? home.housePrice : '' %>"
    />
    <input
    type="text"
    name="houseRating"
    placeholder="Enter your House Rating"
    class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
    value="<%= toEdit ? home.houseRating : '' %>"
  />
  <input
  type="text"
  name="housePhotos"
  placeholder="Enter your House Photos link"
  class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
  value="<%= toEdit ? home.housePhotos : '' %>"
  />
    <input type="submit" value="<%= toEdit ? 'Update' : 'Submit' %>"
        class="w-full bg-red-500 text-white py-2 rounded-md hover:bg-red-600 transition duration-300" />
      
      </form>
    </main>
  </body>
</html>
